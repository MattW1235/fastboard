{
  "prettier.enable": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "svelte.enable-ts-plugin": true,
  "cSpell.ignorePaths": [
    "docs/*.md",
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders"
  ],
  "cSpell.words": [
    "canplay",
    "changesets",
    "dasharray",
    "fastboard",
    "geogebra",
    "iframes",
    "Plyr",
    "pnpx",
    "preid",
    "premajor",
    "preminor",
    "prepatch",
    "sveld",
    "telebox",
    "tippyjs",
    "touchstart",
    "tsup",
    "Unsubscriber",
    "valuemax",
    "valuemin",
    "valuenow"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  }
}
